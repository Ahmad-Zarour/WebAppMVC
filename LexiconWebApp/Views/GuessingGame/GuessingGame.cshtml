@{

    Layout = "_Layout";
    ViewBag.Title = "Play Guessing Game";
}
<h1>@ViewBag.Title </h1>
<h3>You should to guess a number between  0 .. 100 </h3>

    <form asp-controller="GuessingGame" asp-action="GuessingGame" method="post">

        <label>Enter your guess :</label>
        <input type="number" name="userInput" />
        <input type="submit" value="Check" />
    </form>
    <p>@ViewBag.ResultMessage</p>

