@model IEnumerable<LexiconWebApp.Models.CountryModel>
@inject UserManager<ApplicationUser> UserManager;

@{
    ViewData["Title"] = "Index";
}

<h1>Country Page</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                Settings
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (User.Identity.IsAuthenticated)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        City names
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <ol>
                                            @foreach (var name in item.Cities)
                                            {
                                                <li>
                                                    @Html.DisplayFor(model => name.CityName)
                                                </li>
                                            }
                                        </ol>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CountryId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.CountryId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
